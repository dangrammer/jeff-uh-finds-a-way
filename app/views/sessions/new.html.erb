<h1> Log In </h1>

<% if flash[:notice] %>
  <div style='color:red'><%= flash[:notice] %></div>
<% end %>
<br>
<%= form_tag login_path do %>
  <%= label_tag :handle %>
  <%= text_field_tag :handle %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= label_tag :password_confirmation %>
  <%= password_field_tag :password_confirmation %>
  <br>
  <%= submit_tag 'Login' %>
<% end %>